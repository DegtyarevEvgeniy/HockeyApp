    <EditText
        android:id="@+id/nameSave"
        android:layout_width="338dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Имя"
        android:inputType="textMultiLine"
